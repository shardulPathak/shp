<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/doctor_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:text="doctor_id" />

    <TextView
        android:id="@+id/doctor_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/doctor_id"
        android:layout_marginTop="5dp"
        android:text="doctor_email" />

    <TextView
        android:id="@+id/doc_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/doctor_email"
        android:layout_marginTop="5dp"
        android:text="doctor_category" />

    <TextView
        android:id="@+id/doc_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/doc_category"
        android:layout_marginTop="5dp"
        android:text="doctor_full_name" />

    <TextView
        android:id="@+id/doc_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/doc_full_name"
        android:layout_marginTop="5dp"
        android:text="doctor_address" />

    <TextView
        android:id="@+id/doc_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/doc_address"
        android:layout_marginTop="5dp"
        android:text="doctor_city" />

    <TextView
        android:id="@+id/doc_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/doc_city"
        android:layout_marginTop="5dp"
        android:text="doctor_mobile" />

    <TextView
        android:id="@+id/doc_hospital_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/doc_mobile"
        android:layout_marginTop="5dp"
        android:text="doctor_hospital_name" />


</RelativeLayout>