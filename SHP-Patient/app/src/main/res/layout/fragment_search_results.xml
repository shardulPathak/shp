<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shardulpathak.shp_patient.search_disease.SearchResultsFragment">

    <RelativeLayout
        android:id="@+id/search_result_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/disease_list_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:text="@string/list_of_diseases_tv" />

        <ListView
            android:id="@+id/disease_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/disease_list_tv"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:divider="@color/colorBlack"
            android:dividerHeight="1sp" />


        <TextView
            android:id="@+id/doctor_list_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/disease_list"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:text="@string/list_of_doctors_tv"
            android:layout_centerHorizontal="true"/>

        <ListView
            android:id="@+id/doctor_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/doctor_list_tv"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:divider="@color/colorBlack"
            android:dividerHeight="1sp"
/>
    </RelativeLayout>

</FrameLayout>
