<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_feedback"
    tools:context="com.example.shardulpathak.shp_patient.feedback.FeedbackFragment">

    <TextView
        android:id="@+id/feedback_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/feedback_text_view"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/feedback_input_layout"
        android:layout_alignStart="@+id/feedback_input_layout"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="132dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/feedback_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/feedback_text_view"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/feedback_edit_text"
        android:inputType="text"
        android:maxLength="400"/>
    </android.support.design.widget.TextInputLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/feedback_button"
        android:text="@string/submit_button"
        android:layout_below="@id/feedback_input_layout"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"/>

</RelativeLayout>
