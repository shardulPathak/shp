<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/appointment_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Appointment Time" />

    <EditText
        android:id="@+id/appointment_date_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/appointment_date_text_view"
        android:layout_toRightOf="@+id/appointment_date_text_view"
        android:inputType="date" />

    <TextView
        android:id="@+id/appointment_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appointment_date_text_view"
        android:text="Appointment Time" />

    <EditText
        android:id="@+id/appointment_time_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appointment_date_edit_text"
        android:layout_toEndOf="@+id/appointment_time_text_view"
        android:layout_toRightOf="@+id/appointment_time_text_view"
        android:inputType="time" />


</RelativeLayout>